@model Deal_Evaluator.ViewModels.LoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = "_Layout";
}

<h2 xmlns="http://www.w3.org/1999/html">Login</h2>

<form asp-controller="User" asp-action="Login" method="post" class="login-form">
    <div class="form-group">
        <label>Email: </label>
        <input asp-for="Email" required="required" type="email" class="form-control"/>
        <span asp-validation-for="Email" class="error-message"></span>
    </div>

    <div class="form-group">
        <label>Password: </label>
        <input asp-for="Password" type="password" required="required" class="form-control"/>
        <span asp-validation-for="Password" class="error-message"></span>
    </div>
    
    <div class="form-group">
        <input asp-for="RememberMe" type="checkbox" class="form-check-input" />
        <label>Remember me</label>
    </div>
    
    <button type="submit" class="btn btn-primary">Login</button>
</form>