@{
    ViewData["Title"] = "Evaluate Your Deal";
}

<div class="hero-section text-center py-5 mb-5" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; border-radius: 10px;">
    <h1 class="display-3 fw-bold mb-3">Real Estate Deal Analyzer</h1>
    <p class="lead fs-4">Underwrite your next investment property in seconds</p>
</div>

<div class="row justify-content-center">
    <div class="col-lg-10 col-xl-8">
        <div class="card shadow-lg border-0">
            <div class="card-body p-4 p-md-5">
                <h2 class="card-title text-center mb-4 fw-bold">Property Details</h2>

                <form id="propertyForm" method="post" asp-controller="Home" asp-action="EvaluateProperty">

                    <!-- Address Information -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <h5 class="text-muted mb-3"><i class="bi bi-house-door"></i> Location</h5>
                        </div>
                        <div class="col-md-12 mb-3">
                            <label for="Address" class="form-label">Address</label>
                            <input type="text" class="form-control form-control-lg" id="Address" name="Address" placeholder="123 Main Street" required>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="City" class="form-label">City</label>
                            <input type="text" class="form-control" id="City" name="City" placeholder="Dallas" required>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="State" class="form-label">State</label>
                            <input type="text" class="form-control" id="State" name="State" placeholder="TX" maxlength="2" required>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="ZipCode" class="form-label">Zip Code</label>
                            <input type="text" class="form-control" id="ZipCode" name="ZipCode" placeholder="75001" maxlength="5" required>
                        </div>
                    </div>

                    <hr class="my-4">

                    <!-- Property Characteristics -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <h5 class="text-muted mb-3"><i class="bi bi-building"></i> Property Info</h5>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="PropertyType" class="form-label">Property Type</label>
                            <select class="form-select" id="PropertyType" name="PropertyType" required>
                                <option value="">Select Type</option>
                                <option value="0">Single Family</option>
                                <option value="1">Multi Family</option>
                                <option value="2">Condo</option>
                                <option value="3">Townhouse</option>
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="PropertyConditions" class="form-label">Condition</label>
                            <select class="form-select" id="PropertyConditions" name="PropertyConditions" required>
                                <option value="">Select Condition</option>
                                <option value="0">Excellent</option>
                                <option value="1">Minor Repairs</option>
                                <option value="2">Outdated</option>
                                <option value="3">Bad</option>
                                <option value="4">Horrible</option>
                            </select>
                        </div>
                    </div>

                    <!-- Price and Size -->
                    <div class="row mb-4">
                        <div class="col-md-6 mb-3">
                            <label for="Price" class="form-label">Purchase Price ($)</label>
                            <input type="number" class="form-control" id="Price" name="Price" placeholder="250000" min="0">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="Sqft" class="form-label">Square Feet</label>
                            <input type="number" class="form-control" id="Sqft" name="Sqft" placeholder="1500" min="0">
                        </div>
                    </div>

                    <!-- Bed/Bath -->
                    <div class="row mb-4">
                        <div class="col-md-4 mb-3">
                            <label for="Bedrooms" class="form-label">Bedrooms</label>
                            <input type="number" class="form-control" id="Bedrooms" name="Bedrooms" placeholder="3" min="0">
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="Bathrooms" class="form-label">Bathrooms</label>
                            <input type="number" class="form-control" id="Bathrooms" name="Bathrooms" placeholder="2" min="0" step="0.5">
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="YearBuilt" class="form-label">Year Built</label>
                            <input type="number" class="form-control" id="YearBuilt" name="YearBuilt" placeholder="1995" min="1800" max="2025">
                        </div>
                    </div>

                    <!-- Lot Size -->
                    <div class="row mb-4">
                        <div class="col-md-12 mb-3">
                            <label for="LotSizeSqft" class="form-label">Lot Size (sqft)</label>
                            <input type="number" class="form-control" id="LotSizeSqft" name="LotSizeSqft" placeholder="5000" min="0">
                        </div>
                    </div>

                    <!-- Submit Button -->
                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" class="btn btn-primary btn-lg" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border: none;">
                            <strong>Analyze This Deal</strong>
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Quick Stats Card -->
        <div class="row mt-4">
            <div class="col-md-4 mb-3">
                <div class="card text-center border-0 shadow-sm">
                    <div class="card-body">
                        <h3 class="text-primary">Fast</h3>
                        <p class="text-muted mb-0">Get results in seconds</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card text-center border-0 shadow-sm">
                    <div class="card-body">
                        <h3 class="text-success">Accurate</h3>
                        <p class="text-muted mb-0">Data-driven analysis</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card text-center border-0 shadow-sm">
                    <div class="card-body">
                        <h3 class="text-warning">Simple</h3>
                        <p class="text-muted mb-0">No complex setup needed</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-uppercase state input
        document.getElementById('State').addEventListener('input', function(e) {
            e.target.value = e.target.value.toUpperCase();
        });

        // Form validation feedback
        document.getElementById('propertyForm').addEventListener('submit', function(e) {
            if (!this.checkValidity()) {
                e.preventDefault();
                e.stopPropagation();
            }
            this.classList.add('was-validated');
        });
    </script>
}