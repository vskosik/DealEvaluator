@model DealEvaluator.Web.Models.LenderIndexViewModel

@{
    ViewData["Title"] = "My Lenders";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-1">My Lenders</h2>
            <p class="text-muted mb-0">Manage lenders with their rates and fees, and choose a default for evaluations.</p>
        </div>
        <a class="btn btn-primary" asp-action="Create">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-lg me-1" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M8 2a.5.5 0 0 1 .5.5v5h5a.5.5 0 0 1 0 1h-5v5a.5.5 0 0 1-1 0v-5h-5a.5.5 0 0 1 0-1h5v-5A.5.5 0 0 1 8 2"/>
            </svg>
            Add Lender
        </a>
    </div>

    <div class="row">
        <div class="col-lg-6 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title mb-3">Default Lender</h5>
                    <form asp-action="SetDefault" method="post" class="row g-2 align-items-end">
                        @Html.AntiForgeryToken()
                        <div class="col-9">
                            <label for="defaultLender" class="form-label">Use this lender by default</label>
                            <select class="form-select" id="defaultLender" name="lenderId">
                                <option value="">None (use default loan rate)</option>
                                @foreach (var lender in Model.Lenders)
                                {
                                    <option value="@lender.Id" selected="@(Model.DefaultLenderId == lender.Id ? "selected" : null)">
                                        @lender.Name (@((lender.AnnualRate * 100).ToString("0.##"))%)
                                    </option>
                                }
                            </select>
                            <div class="form-text">Evaluations use this lender when no lender is chosen. If none is set, the standard loan rate applies.</div>
                        </div>
                        <div class="col-3 text-end">
                            <button type="submit" class="btn btn-success w-100">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="card-title mb-0">Lenders</h5>
                        <span class="badge bg-secondary">@Model.Lenders.Count</span>
                    </div>

            @if (!Model.Lenders.Any())
            {
                <div class="alert alert-info mb-0">
                    <strong>No lenders yet.</strong> Add one to start using lender-specific rates and fees.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead>
                        <tr>
                            <th>Name</th>
                            <th class="text-end">Annual Rate</th>
                            <th class="text-end">Origination Fee</th>
                            <th class="text-end">Loan Service Fee (Monthly %)</th>
                            <th>Note</th>
                            <th class="text-end">Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var lender in Model.Lenders)
                        {
                            var isDefault = Model.DefaultLenderId == lender.Id;
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center gap-2">
                                        <span>@lender.Name</span>
                                        @if (isDefault)
                                        {
                                            <span class="badge bg-success">Default</span>
                                        }
                                    </div>
                                </td>
                                <td class="text-end">@((lender.AnnualRate * 100).ToString("0.##"))%</td>
                                <td class="text-end">@((lender.OriginationFee * 100).ToString("0.##"))%</td>
                                <td class="text-end">@((lender.LoanServiceFee * 100).ToString("0.##"))%</td>
                                <td class="text-muted">
                                    @if (!string.IsNullOrWhiteSpace(lender.Note))
                                    {
                                        @lender.Note
                                    }
                                </td>
                                <td class="text-end">
                                    <div class="btn-group">
                                        <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@lender.Id">Edit</a>
                                        <form asp-action="Delete" asp-route-id="@lender.Id" method="post" onsubmit="return confirm('Archive this lender? Evaluations will keep their lender reference.');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-outline-danger">Archive</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>

    @if (Model.ArchivedLenders.Any())
    {
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5 class="card-title mb-0">Archived Lenders</h5>
                    <span class="badge bg-secondary">@Model.ArchivedLenders.Count</span>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead>
                        <tr>
                            <th>Name</th>
                            <th class="text-end">Annual Rate</th>
                            <th class="text-end">Origination Fee</th>
                            <th class="text-end">Loan Service Fee (Monthly %)</th>
                            <th>Note</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var lender in Model.ArchivedLenders)
                        {
                            <tr class="table-light">
                                <td>
                                    <div class="d-flex align-items-center gap-2">
                                        <span>@lender.Name</span>
                                        <span class="badge bg-secondary">Archived</span>
                                    </div>
                                </td>
                                <td class="text-end">@((lender.AnnualRate * 100).ToString("0.##"))%</td>
                                <td class="text-end">@((lender.OriginationFee * 100).ToString("0.##"))%</td>
                                <td class="text-end">@((lender.LoanServiceFee * 100).ToString("0.##"))%</td>
                                <td class="text-muted">
                                    @if (!string.IsNullOrWhiteSpace(lender.Note))
                                    {
                                        @lender.Note
                                    }
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>
</div>
