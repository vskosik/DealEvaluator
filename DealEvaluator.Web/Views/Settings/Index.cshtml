@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Update profit unit display based on profit target type
        const profitTypeSelect = document.getElementById('ProfitTargetType');
        const profitUnit = document.getElementById('profit-unit');
        const profitHelp = document.getElementById('profit-help');

        function updateProfitDisplay() {
            if (profitTypeSelect.value === '0') {
                // Percentage of ARV
                profitUnit.textContent = '%';
                profitHelp.textContent = 'E.g., 0.15 for 15% of ARV';
            } else {
                // Fixed Dollar Amount
                profitUnit.textContent = '$';
                profitHelp.textContent = 'E.g., 40000 for $40,000 profit';
            }
        }

        profitTypeSelect.addEventListener('change', updateProfitDisplay);
        updateProfitDisplay(); // Initialize on page load

        // Convert percentages to decimal format helper
        function convertPercentToDecimal(inputId) {
            const input = document.getElementById(inputId);
            input.addEventListener('blur', function() {
                const value = parseFloat(this.value);
                if (!isNaN(value) && value > 1) {
                    // User entered percentage (e.g., 6 instead of 0.06)
                    this.value = (value / 100).toFixed(4);
                }
            });
        }

        // Apply to percentage fields
        convertPercentToDecimal('SellingAgentCommission');
        convertPercentToDecimal('SellingClosingCosts');
        convertPercentToDecimal('BuyingClosingCosts');
        convertPercentToDecimal('AnnualPropertyTaxRate');
        convertPercentToDecimal('ContingencyPercentage');

        // Form validation
        const settingsForm = document.getElementById('settingsForm');
        if (settingsForm) {
            settingsForm.addEventListener('submit', function(e) {
                if (!this.checkValidity()) {
                    e.preventDefault();
                    e.stopPropagation();
                }
                this.classList.add('was-validated');
            });
        }

        // Store active tab in session storage to restore on page reload
        const settingsTabs = document.getElementById('settingsTabs');
        if (settingsTabs) {
            settingsTabs.addEventListener('shown.bs.tab', function (event) {
                sessionStorage.setItem('activeSettingsTab', event.target.id);
            });

            // Restore active tab on page load
            const activeTab = sessionStorage.getItem('activeSettingsTab');
            if (activeTab) {
                const tabElement = document.getElementById(activeTab);
                if (tabElement) {
                    const tab = new bootstrap.Tab(tabElement);
                    tab.show();
                }
            }
        }
    </script>
}